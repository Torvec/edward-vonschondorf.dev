{
  "name": "my-site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "deploy": "astro build && npx wrangler@latest deploy"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource-variable/fira-code": "^5.2.7",
    "@fontsource/poppins": "^5.2.7",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{md,mdx}": [
      "prettier --write --ignore-unknown"
    ],
    "*.astro": [
      "prettier --write --ignore-unknown"
    ],
    "*.{json,html}": [
      "prettier --write --ignore-unknown"
    ],
    "*.css": [
      "prettier --write --ignore-unknown"
    ]
  }
}
