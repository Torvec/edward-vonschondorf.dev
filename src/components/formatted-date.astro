---
interface Props {
  date: Date | string;
}

let { date } = Astro.props;

if (typeof date === "string") {
  date = new Date(date);
}

---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString("en-us", {
    year: "numeric",
    month: "short",
    day: "2-digit",
    timeZone: "UTC",
  })}
</time>
