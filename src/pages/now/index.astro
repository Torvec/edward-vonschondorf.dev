---
import { getCollection } from "astro:content";
import Layout from "@/layouts/layout.astro";
import PageHeader from "@/components/page-header.astro";
import FormattedDate from "@/components/formatted-date.astro";
import NowIcon from "@/assets/now.svg";

const posts = (await getCollection("now")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const now = posts[0];

const then = posts.slice(1);
---

<Layout title="Now | Edward Vonschondorf" description="What I'm doing now.">
  <article class="relative z-2 container mx-auto max-w-3xl space-y-1.5 lg:space-y-3">
    <PageHeader header="Now" Icon={NowIcon}>
      Here you can find out what I'm up to at any given moment and what I was up to before. Inspired by <a
        href="https://sive.rs/nowff"
        target="_blank"
        rel="noopener noreferrer external"
        class="font-medium text-stone-100 transition-colors duration-300 ease-in-out hover:text-orange-600">
        Derek Sivers /Now page movement
      </a>.
    </PageHeader>
    <div class="divide-y divide-stone-700 border-y border-stone-700 backdrop-blur-xs md:rounded-3xl md:border-x">
      <!-- NOW -->
      <div class="flex flex-col gap-3 bg-stone-900/40 p-3 md:flex-row md:gap-6 md:p-6">
        <span class="block shrink-0 font-mono font-medium text-stone-400">
          <FormattedDate date={now.data.pubDate} />
        </span>
        <p class="w-full space-y-1.5 font-medium text-stone-100">
          {now.data.content.map((content) => <span class="block">{content}</span>)}
        </p>
      </div>
      <!-- THEN -->
      <div class="space-y-6 p-3 md:p-6">
        {
          then.map((post) => (
            <div class="flex flex-col items-baseline gap-3 md:flex-row md:gap-6">
              <span class="block shrink-0 font-mono text-sm text-stone-500">
                <FormattedDate date={post.data.pubDate} />
              </span>
              <p class="w-full space-y-1.5 text-stone-300">
                {post.data.content.map((content) => (
                  <span class="block">{content}</span>
                ))}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </article>
</Layout>
